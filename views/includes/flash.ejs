<% if(success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show col-6 offset-3 d-flex justify-content-between align-items-center"
   role="alert">
    <div><%- success %></div>
    <button type="button"
      class="btn-close ms-3"
      data-bs-dismiss="alert" 
      aria-label="Close">
    </button>
  </div>
<% } %>

<% if(error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 d-flex justify-content-between align-items-center"
   role="alert">
    <div><%- error %></div>
    <button type="button"
      class="btn-close ms-3"
      data-bs-dismiss="alert" 
      aria-label="Close">
    </button>
  </div>
<% } %>
